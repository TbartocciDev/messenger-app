<%- include('../partials/header') %>
<link rel='stylesheet' href='/stylesheets/friends/index.css' class="page-style" />
<nav class="nav-bar">
    <a href="/chats">CHAT ROOMS</a> | <a href="/account/<%=account._id%>/friends" class="selected">FRIENDS</a> | 
    <a href="/account/<%=account._id%>">MY ACCOUNT</a> | <a href="/logout">LOG OUT</a>
</nav>
<div class="holder">
    <h1>Friends List:</h1>
    <div class="friends-holder">
        <% if (friends.length != 0) { %>
            <div class="friends">
                <% Array.from(friends).forEach(function(f) { %>
                    <div class="friend">
                        <h3 class="name"><%=f.displayName%></h3>
                        <form action="/account/<%=account._id%>/friends?_method=DELETE" method="POST">
                            <input type="text" readonly name="friend" value="<%=f%>" class="hidden">
                            <button type="submit" class="x-btn">X</button>
                        </form>
                    </div>
                <% })%>
            </div>
        <% } else { %>
            <h2>No friends yet, try adding them by code!</h2>
        <% } %>
    </div>
    <form class="find-friend" action="/account/<%=account._id%>/friends" method="POST" autocomplete="off">
        <input type="text" name="userId" placeholder="Enter friend code" required autocomplete="off">
        <input type="submit" value="Look for friend">
    </form>
</div>
<script src="/javascripts/friends/index.js" type="text/javascript"></script>
<%- include('../partials/footer') %>