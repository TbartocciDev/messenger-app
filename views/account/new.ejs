<%- include('../partials/header') %>
<link rel='stylesheet' href='/stylesheets/account/new.css' class="page-style" />
<h1>Let us make an account for you!</h1>
<h2>All we need from you is your desired display name</h2>
<h3>Don't worry this can be updated later!</h3>
<form class="create-account-form" action="/account/new" method="POST" autocomplete="off">
    <h3>Display Name:</h3>
    <br>
    <input type="text" name="displayName" required class="t-display">
    <br>
    <h3>Your Unique ID is:</h3>
    <br>
    <input type="text" name="userId" value="<%=uniqueId%>" readonly class="t-display" id="ro">
    <br>
    <input type="submit" value="Create Account" class="btn">
</form>
<script src="/javascripts/account/new.js" type="text/javascript"></script>
<%- include('../partials/footer') %>
